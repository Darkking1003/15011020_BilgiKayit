<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailScreen">

    <TextView
        android:id="@+id/DersAdi"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="100dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Derslik"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/DersiVeren"
        app:layout_constraintStart_toStartOf="@+id/DersiVeren"
        app:layout_constraintTop_toBottomOf="@+id/DersiVeren" />

    <TextView
        android:id="@+id/DersiVeren"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/DersAdi"
        app:layout_constraintStart_toStartOf="@+id/DersAdi"
        app:layout_constraintTop_toBottomOf="@+id/DersAdi" />

    <TextView
        android:id="@+id/Saat"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/Derslik"
        app:layout_constraintStart_toStartOf="@+id/Derslik"
        app:layout_constraintTop_toBottomOf="@+id/Derslik" />
</android.support.constraint.ConstraintLayout>